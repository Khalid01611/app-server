# Environment
NODE_ENV=production

# Server
PORT=8000

# Database
MONGO_URI=mongodb://localhost:27017/eastwest

# CORS Configuration for Production
# Add your production domains separated by commas
FRONTEND_HOST=https://yourdomain.com
FRONTEND_ORIGIN=https://app.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com,https://admin.yourdomain.com

# JWT Secrets
JWT_ACCESS_SECRET=your-super-secret-access-key
JWT_REFRESH_SECRET=your-super-secret-refresh-key

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# SMS Configuration
SMS_API_KEY=your-sms-api-key
SMS_SENDER_ID=your-sender-id

# File Upload
UPLOAD_DIR=./uploads

# App Name
APP_NAME=EastWest App